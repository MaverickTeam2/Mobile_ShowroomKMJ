<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.fragments.BackupFragment"
    android:background="#FFF0F5F9">

    <include
        android:id="@+id/header_include"
        layout="@layout/layout_headeradd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backup"
                android:textSize="20sp"
                android:textColor="#001333"
                android:fontFamily="@font/lato_black" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Kelola pencadangan dan pemulihan data."
                android:textColor="#4B5563"
                android:fontFamily="@font/lato" />

            <!-- Card Backup -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_inner"
                android:padding="16dp">

                <!-- Header + Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvBackupTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Automatic Backups"
                        android:textSize="16sp"
                        android:textColor="#001333"
                        android:fontFamily="@font/lato_bold" />

                    <Switch
                        android:id="@+id/switchBackup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/tvBackupDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Jadwalkan pencadangan otomatis harian data showroom anda"
                    android:textColor="#4B5563"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato" />
            </LinearLayout>

            <!-- Info cadangan -->
            <TextView
                android:id="@+id/tvLastBackup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cadangan terakhir: 19 Oktober 10.30"
                android:textColor="#001333"
                android:textSize="13sp"
                android:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tvBackupSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Ukuran: 2,8 GB"
                android:textColor="#001333"
                android:textSize="13sp"
                android:fontFamily="@font/lato" />

            <!-- Tombol Cadangkan -->
            <Button
                android:id="@+id/btnCadangkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="32dp"
                android:text="Cadangkan"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:backgroundTint="#001333"
                android:fontFamily="@font/lato_bold"
                android:layout_gravity="start"/>

        </LinearLayout>
    </ScrollView>

