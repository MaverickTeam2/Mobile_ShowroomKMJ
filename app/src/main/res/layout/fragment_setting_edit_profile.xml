<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5F9"
    tools:context=".ui.setting.fragments.EditProfileFragment">

    <include
        android:id="@+id/header_include"
        layout="@layout/layout_headeradd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="Account"
                android:textColor="#001333"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lato"
                android:text="Kelola profil akun dan ubah password di sini."
                android:textColor="#4B5563" />

            <!-- Profile Picture -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="Profil Picture"
                android:textColor="#001333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">


                <!-- Foto Profil -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_bg"
                    android:contentDescription="Profile Picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <!-- Bagian kanan: tombol dan teks -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnUploadPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="#3B82F6"
                        android:paddingHorizontal="16dp"
                        android:text="Upload new Photo"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:text="Upload logo Showroom anda (disarankan: 512x512px)"
                        android:textColor="#4B5563"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="Nama Lengkap"
                android:textColor="#001333"
                android:textSize="16sp" />
            <!-- Input Nama -->
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan nama lengkap"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Username"
                android:textColor="#001333"
                android:textSize="16sp"/>

            <!-- Username -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext_disabled"
                android:enabled="false"
                android:hint="username"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Email"
                android:textColor="#001333"
                android:textSize="16sp" />

            <!-- Username -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext_disabled"
                android:enabled="false"
                android:hint="email"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="No Telephone"
                android:textColor="#001333"
                android:textSize="16sp" />

            <!-- Nomor Telepon -->
            <EditText
                android:id="@+id/etNoTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan nomor telephone"
                android:inputType="phone"
                android:padding="12dp"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Alamat"
                android:textColor="#001333"
                android:textSize="16sp"
                android:imeOptions="actionNext" />

            <!-- Alamat -->
            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan Alamat"
                android:inputType="text"
                android:padding="12dp"
                android:imeOptions="actionDone" />

            <!-- Ubah Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Ubah Password"
                android:textColor="#001333"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="Isi bagian ini jika ingin mengganti password akun Anda."
                android:textColor="#4B5563" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Password Sebelumnya"
                android:textColor="#001333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPasswordLama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan password lama"
                android:inputType="textPassword"
                android:padding="12dp"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Password Baru"
                android:textColor="#001333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPasswordBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan password baru"
                android:inputType="textPassword"
                android:padding="12dp"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato_black"
                android:text="Konfirmasi Password"
                android:textColor="#001333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etKonfirmasiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:hint="Ulangi password baru"
                android:inputType="textPassword"
                android:padding="12dp"
                android:imeOptions="actionDone" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/save"
        layout="@layout/footer_save_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>