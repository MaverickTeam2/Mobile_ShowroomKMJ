<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5F9"
    tools:context=".ui.setting.fragments.EditProfileFragment">

    <include
        android:id="@+id/header_include"
        layout="@layout/layout_headeradd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kelola profil akun dan ubah password di sini."
            android:textColor="#4B5563"
            android:fontFamily="@font/lato"
            android:layout_marginBottom="4dp"/>

        <!-- Profile Picture -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Picture"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">


            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:contentDescription="Profile Picture" />

            <!-- Bagian kanan: tombol dan teks -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnUploadPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload new Photo"
                    android:textSize="13sp"
                    android:paddingHorizontal="16dp"
                    android:backgroundTint="#3B82F6"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload logo Showroom anda (disarankan: 150x150px)"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato"
                    android:textColor="#4B5563" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black" />
        <!-- Input Nama -->
        <EditText
            android:id="@+id/etNamaLengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama lengkap"
            android:inputType="textPersonName"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dianji hikari"
            android:enabled="false"
            android:background="@drawable/bg_edittext_disabled"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <!-- Username -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dianji@gmail.com"
            android:enabled="false"
            android:background="@drawable/bg_edittext_disabled"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Telephone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <!-- Nomor Telepon -->
        <EditText
            android:id="@+id/etNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nomor telephone"
            android:inputType="phone"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <!-- Ubah Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubah Password"
            android:fontFamily="@font/lato_black"
            android:textSize="20sp"
            android:textColor="#001333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi bagian ini jika ingin mengganti password akun Anda."
            android:fontFamily="@font/lato"
            android:textColor="#4B5563" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Sebelumnya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/etPasswordLama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan password lama"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Baru"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/etPasswordBaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan password baru"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#001333"
            android:fontFamily="@font/lato_black"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/etKonfirmasiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ulangi password baru"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/save"
        layout="@layout/footer_save_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>