<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="14dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="top">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/sample_profile"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_bg"
                android:padding="2dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama User"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@gmail.com"
                    android:textColor="#555"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lastLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last login: -"
                    android:textColor="#777"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textSize="12sp"
                        android:textColor="#8B5E00"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3dp"
                        android:background="@drawable/bg_badge_admin"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/badgeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktif"
                        android:textSize="12sp"
                        android:textColor="#146C43"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="3dp"
                        android:background="@drawable/bg_badge_active" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/statusSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Hapus"
                android:layout_marginStart="8dp"
                app:tint="#BA2E3A"
                android:padding="6dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>