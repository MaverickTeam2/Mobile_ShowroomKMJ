<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <include
        android:id="@+id/header_include"
        layout="@layout/layout_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/text_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan &amp; Analisis"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#001333"
                android:fontFamily="@font/lato_black"
                android:layout_marginBottom="16dp" />

            <!-- Laporan Penjualan Bulanan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/iconBgSales"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_chart"
                        app:layout_constraintStart_toStartOf="@id/iconBgSales"
                        app:layout_constraintEnd_toEndOf="@id/iconBgSales"
                        app:layout_constraintTop_toTopOf="@id/iconBgSales"
                        app:layout_constraintBottom_toBottomOf="@id/iconBgSales" />

                    <ImageView
                        android:id="@+id/ivDownload"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:contentDescription="Unduh"
                        android:focusable="true"
                        android:src="@drawable/download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Laporan Penjualan Bulanan"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toEndOf="@id/iconBgSales"
                        app:layout_constraintEnd_toStartOf="@id/ivDownload"
                        app:layout_constraintTop_toTopOf="@id/iconBgSales"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Detail Penjualan dalam 1 bulan"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        app:layout_constraintStart_toStartOf="@id/tvTitle"
                        app:layout_constraintEnd_toEndOf="@id/tvTitle"
                        app:layout_constraintTop_toBottomOf="@id/tvTitle"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 Sales"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgSales"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:backgroundTint="#4DB5FF"
                        android:text="Generate"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgSales"
                        android:layout_marginTop="12dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Analisis Pendapatan -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/iconBgIncome"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivIconIncome"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_income"
                        app:layout_constraintStart_toStartOf="@id/iconBgIncome"
                        app:layout_constraintEnd_toEndOf="@id/iconBgIncome"
                        app:layout_constraintTop_toTopOf="@id/iconBgIncome"
                        app:layout_constraintBottom_toBottomOf="@id/iconBgIncome" />

                    <ImageView
                        android:id="@+id/ivDownloadIncome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:contentDescription="Unduh"
                        android:focusable="true"
                        android:src="@drawable/download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitleIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Analisis Pendapatan"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toEndOf="@id/iconBgIncome"
                        app:layout_constraintEnd_toStartOf="@id/ivDownloadIncome"
                        app:layout_constraintTop_toTopOf="@id/iconBgIncome"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvDescIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Detail Pendapatan dan Performa"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        app:layout_constraintStart_toStartOf="@id/tvTitleIncome"
                        app:layout_constraintEnd_toEndOf="@id/tvTitleIncome"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleIncome"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvStatIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.500 JT"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgIncome"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerateIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:backgroundTint="#00C853"
                        android:text="Generate"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgIncome"
                        android:layout_marginTop="12dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Laporan Stok -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/iconBgStock"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivIconStock"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_car"
                        app:layout_constraintStart_toStartOf="@id/iconBgStock"
                        app:layout_constraintEnd_toEndOf="@id/iconBgStock"
                        app:layout_constraintTop_toTopOf="@id/iconBgStock"
                        app:layout_constraintBottom_toBottomOf="@id/iconBgStock" />

                    <ImageView
                        android:id="@+id/ivDownloadStock"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:clickable="true"
                        android:contentDescription="Unduh"
                        android:focusable="true"
                        android:src="@drawable/download"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTitleStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Laporan Stok"
                        android:textSize="16sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toEndOf="@id/iconBgStock"
                        app:layout_constraintEnd_toStartOf="@id/ivDownloadStock"
                        app:layout_constraintTop_toTopOf="@id/iconBgStock"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvDescStock"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Detail Jumlah Stok Mobil"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        app:layout_constraintStart_toStartOf="@id/tvTitleStock"
                        app:layout_constraintEnd_toEndOf="@id/tvTitleStock"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleStock"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvStatStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Cars"
                        android:textSize="15sp"
                        android:fontFamily="@font/lato_black"
                        android:textColor="#1A1A1A"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgStock"
                        android:layout_marginTop="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGenerateStock"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:backgroundTint="#FF4081"
                        android:text="Generate"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:cornerRadius="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iconBgStock"
                        android:layout_marginTop="12dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- Export Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Options"
                android:fontFamily="@font/lato_black"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnExportPDF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Export to PDF"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#3676FF"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnExportExcel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Export to Excel"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#00C080"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>