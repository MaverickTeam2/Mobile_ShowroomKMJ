<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5F9"
    android:orientation="vertical"
    tools:context=".ui.car.CarFragment">

    <!-- Header -->
    <include
        android:id="@+id/header_include"
        layout="@layout/layout_header" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tombol tambah mobil -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="#FF001333"
                android:drawableLeft="@drawable/ic_plus_white"
                android:drawablePadding="8dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingStart="10dp"
                android:text="Tambah"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                app:cornerRadius="12dp" />

            <!-- Container tempat card mobil -->
            <LinearLayout
                android:id="@+id/car_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
