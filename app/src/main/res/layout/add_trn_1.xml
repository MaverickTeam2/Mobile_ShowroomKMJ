<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5F9">

    <include
        android:id="@+id/header_include"
        layout="@layout/layout_headeradd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/progres_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/progres"
            layout="@layout/stepper_progress" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/progres_container"
        app:layout_constraintBottom_toTopOf="@id/save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pembelian"
                android:fontFamily="@font/lato_black"
                android:textSize="24sp"
                android:textColor="#001333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Mobil*"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="20sp"
                    android:textColor="#001333"
                    android:layout_marginBottom="5dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih opsi"
                        android:inputType="none"
                        android:fontFamily="@font/lato"
                        android:textColor="#001333" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- PERBAIKAN: Container Tipe Mobil - HIDDEN by default -->
                <LinearLayout
                    android:id="@+id/tipeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipe Mobil"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="20sp"
                        android:textColor="#001333"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipe Mobil"
                        android:background="#EAEAEA"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        android:enabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txttipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:fontFamily="@font/lato"
                            android:textColor="#001333" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- PERBAIKAN: Container Detail Mobil - HIDDEN by default -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/carDetailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:visibility="gone">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgCar"
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_car"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:shapeAppearanceOverlay="@style/LeftRoundedImage" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ABT XGT Audi R8 Street-Legal Race Car"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:paddingStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/imgCar"
                    app:layout_constraintTop_toTopOf="@id/imgCar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 7.998.000 x 60"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/txtTitle"
                    app:layout_constraintTop_toBottomOf="@id/txtTitle" />

                <TextView
                    android:id="@+id/txtDp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dp Rp. 39.000.000"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    app:layout_constraintStart_toStartOf="@id/txtPrice"
                    app:layout_constraintTop_toBottomOf="@id/txtPrice" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/line_default"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="@id/txtDp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtDp" />

                <LinearLayout
                    android:id="@+id/kmLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="@id/divider"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_spedometer"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:id="@+id/txtKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120000 Km"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/kmLayout"
                    app:layout_constraintTop_toTopOf="@id/kmLayout">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_tahun" />

                    <TextView
                        android:id="@+id/txtYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="4dp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/save"
        layout="@layout/footer_save_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>