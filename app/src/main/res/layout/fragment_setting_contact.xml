<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".ui.setting.fragments.ContactSocialFragment">

    <!-- Header -->
    <include
        android:id="@+id/header_include"
        layout="@layout/layout_headeradd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak &amp; Tautan Sosial"
                android:textSize="20sp"
                android:textColor="#001333"
                android:fontFamily="@font/lato_black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukkan tautan media sosial showroom Anda."
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/lato" />

            <!-- WHATSAPP -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#001333"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_edittext"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+62"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/bg_country_code"
                    android:gravity="center_vertical"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etWhatsapp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Isi langsung tanpa 62 atau 0 (e.g., 85123456789)"
                    android:inputType="phone"
                    android:background="@null"
                    android:padding="8dp"
                    android:textColor="#111827"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi langsung tanpa 62 atau 0 (e.g., 85123456789)"
                android:textColor="#4B5563"
                android:fontFamily="@font/lato"
                android:textSize="12sp"
                android:layout_marginBottom="12dp" />

            <!-- INSTAGRAM -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram Profil"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#001333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL Instagram profil showroom"
                android:inputType="textUri"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- FACEBOOK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook Profil"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#001333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL Facebook profil showroom"
                android:inputType="textUri"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- TIKTOK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TikTok Profil"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#001333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTiktok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL Tik Tok profil showroom"
                android:inputType="textUri"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- YOUTUBE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube Profil"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#001333"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etYoutube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL YouTube profil showroom"
                android:inputType="textUri"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <include
        android:id="@+id/save"
        layout="@layout/footer_save_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
